<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/pk_nan_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/guangmang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/guangmang" />


    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp">


        <LinearLayout
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:src="@mipmap/fanhui_white" />


        </LinearLayout>


        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="PK结果"
            android:textColor="#ffffff"
            android:textSize="16dp" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/jieguo_img"
        android:layout_width="175dp"
        android:layout_height="137dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="109dp"
        android:src="@mipmap/pk_shibai" />


    <TextView
        android:id="@+id/jieguo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jieguo_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="新手挑战失败"
        android:textColor="@color/white"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/jieguo_miaoshu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jieguo_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="亲，继续加油哦~"
        android:textColor="@color/white"
        android:textSize="12sp" />


    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="168dp"
        android:layout_height="88dp"
        android:layout_below="@+id/jieguo_miaoshu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/result_sp"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/value_miaoshu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本场失败消耗PK值"
            android:textColor="@color/white"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="-10"
            android:textColor="@color/white"
            android:textSize="20sp" />


    </LinearLayout>


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/restart"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="195dp"
        android:layout_height="@dimen/height_btn_bottom"
        android:layout_below="@+id/layout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:adjustViewBounds="true"
        android:background="@drawable/selector_common_btn"
        android:text="再次PK"
        android:textColor="@color/white"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/share_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="立即分享"
        android:textColor="@color/white"
        android:textSize="12sp" />


    <LinearLayout
        android:id="@+id/buttom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:visibility="gone">

        <include layout="@layout/shape_buttom_bg" />

    </LinearLayout>


</RelativeLayout>
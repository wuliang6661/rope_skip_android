<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundGray"
    android:fitsSystemWindows="true">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/fenlei_recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fenlei_recycle">
        <!-- 自定义布局内容-->

        <include
            layout="@layout/layout_swipe_to_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <com.habit.commonlibrary.widget.ProgressbarLayout
            android:id="@+id/progress_fragment_fragment_find_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </FrameLayout>

</RelativeLayout>

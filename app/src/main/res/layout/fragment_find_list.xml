<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundGray"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/fenlei_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/fenlei_recycle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/shaixuan_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:visibility="gone">


            <View
                android:layout_width="1dp"
                android:layout_height="14dp"
                android:background="#cccccc" />


            <ImageView
                android:layout_width="17dp"
                android:layout_height="22dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:src="@mipmap/shaixuan" />

        </LinearLayout>

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fenlei_layout">
        <!-- 自定义布局内容-->

        <include
            layout="@layout/layout_swipe_to_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <com.habit.commonlibrary.widget.ProgressbarLayout
            android:id="@+id/progress_fragment_fragment_find_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </FrameLayout>

</RelativeLayout>
